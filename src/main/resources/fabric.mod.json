{
  "schemaVersion": 1,
  "id": "rpg-hud",
  "version": "${version}",

  "name": "RPG-Hud",
  "description": "This mod changes the way the HUD is rendered and adds several new functionalities and styles (mainly RPG-like styles)",
  "authors": [
    "KurodaAkira"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/KurodaAkira/RPG-Hud",
    "issues": "https://github.com/KurodaAkira/RPG-Hud/issues"
  },

  "license": "GPL-3.0",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.spellcraftgaming.rpghud.main.ModRPGHud"
    ]
  },
  "mixins": [
    "rpg-hud.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.22",
    "fabric": "*",
    "minecraft": ">=1.19.4",
    "java": ">=17"
  },
  "suggests": {
    "flamingo": "*"
  }
}
